<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/matchlist_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        card_view:cardBackgroundColor="#42000000"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/matchlist_champion_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_width="4dp"
            app:civ_border_color="#FF000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/matchlist_playername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_toRightOf="@id/matchlist_champion_image"
            android:layout_toEndOf="@id/matchlist_champion_image"
            />
        <TextView
            android:id="@+id/matchlist_champion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_below="@id/matchlist_playername"
            android:layout_toRightOf="@id/matchlist_champion_image"/>
        <TextView
            android:id="@+id/matchlist_lane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:elevation="4dp"
            android:layout_toRightOf="@id/matchlist_playername"/>
        <TextView
            android:id="@+id/matchlist_season"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:elevation="4dp"
            android:layout_below="@id/matchlist_lane"
            android:layout_toRightOf="@id/matchlist_champion"
            android:layout_toEndOf="@id/matchlist_champion"/>
        <TextView
            android:id="@+id/matchlist_queue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_toRightOf="@id/matchlist_champion_image"
            android:layout_toEndOf="@id/matchlist_champion_image"
            android:layout_below="@id/matchlist_champion"
/>
        <TextView
            android:id="@+id/matchlist_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_toRightOf="@id/matchlist_champion_image"
            android:layout_toEndOf="@id/matchlist_champion_image"
            android:layout_below="@id/matchlist_queue"
/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
