<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/matchlist_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        card_view:cardBackgroundColor="@color/White"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/matchlist_champion_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_width="4dp"
            android:layout_margin="5dp"
            app:civ_border_color="@color/colorPrimary"
            android:layout_alignParentLeft="true"
            />
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentStart="true"-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/matchlist_champion_image"
            android:padding="5dp"
            android:gravity="center_vertical"
            >
        <TextView
            android:id="@+id/matchlist_playername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:elevation="4dp"
            />
            <!--android:layout_toRightOf="@id/matchlist_champion_image"-->
            <!--android:layout_toEndOf="@id/matchlist_champion_image"-->
        <TextView
            android:id="@+id/matchlist_champion"
            android:layout_width="wrap_content"
            android:textColor="@color/Black"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_below="@id/matchlist_playername"/>
            <!--android:layout_toRightOf="@id/matchlist_champion_image"-->
        <TextView
            android:id="@+id/matchlist_lane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:elevation="4dp"
            android:textColor="@color/Black"
            android:layout_toRightOf="@id/matchlist_playername"/>
        <TextView
            android:id="@+id/matchlist_season"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:elevation="4dp"
            android:textColor="@color/Black"
            android:layout_below="@id/matchlist_lane"
            android:layout_toRightOf="@id/matchlist_champion"
            android:layout_toEndOf="@id/matchlist_champion"/>
        <TextView
            android:id="@+id/matchlist_queue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:textColor="@color/Black"
            android:layout_below="@id/matchlist_champion"/>
            <!--android:layout_toRightOf="@id/matchlist_champion_image"-->
            <!--android:layout_toEndOf="@id/matchlist_champion_image"-->
        <TextView
            android:id="@+id/matchlist_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:elevation="4dp"
            android:layout_below="@id/matchlist_queue" />
            <!--android:layout_toRightOf="@id/matchlist_champion_image"-->
            <!--android:layout_toEndOf="@id/matchlist_champion_image"-->
        </RelativeLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
